@page
@model DevaEnglish.Pages.Feedback.Index_Feedback_formModel
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Pages/_Layout.cshtml";

}


<div class="container">
    <h2 > Feedback Form</h2><br />


    @if (TempData["FeedbackResponse"].Equals(1))
    {       //feedback success alert
        <div class="alert alert-success" role="alert">
            <p>Feedback form successfully Submitted!</p>
        </div>

    }
    @if (TempData["FeedbackResponse"].Equals(0))
    {
        //feedback failurer alert
        <div class="alert alert-danger" role="alert">
            <p>Feedback form  Submission was Unsuccessful!</p>
        </div>

    }



    <p>Please fill in all fields of the feedback form</p>



    <form method="post" asp-page-handler="Feedback">

       
            <label for="CoachList">Select a coach</label>
            <select class="dropdown-item" asp-for="Scores.GroupID" id="CoachList">

                @{ foreach (var (key, value) in Model.CoachNames)
                    {
                        <option class="dropdown-item" value="@key">@value</option>

                    }

                }

            </select>
            
        
        

        <label for="FamilyNameList">Select a Family</label>
        <select class="dropdown-item" asp-for="Scores.FamilyID" id="FamilyNameList">
            @{
                foreach (var (key, value) in Model.FamilyNames)
                {
                    <option class="dropdown-item" value="@key">@value</option>

                }

            }
        </select>


        <div class="container radio-inline">
            <h3 class="feedback_section_title">The People in the host family's home</h3>
            <span asp-validation-for="Scores.People" class="text-danger"></span>
            @foreach (var number in Model.feedbackOptions)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Scores.People" value="@number" id="@($"People_{number}")">
                    <label class="form-check-label" for="@($"People_{number}")">@number</label>

                </div>
            }
        </div>
